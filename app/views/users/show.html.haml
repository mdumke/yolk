%header.double-border-bottom
  %h2= @user.full_name

  %ul.no-bullet
    %li= "Yolking since #{@user.created_at.to_date}"
    %li= "Power Animal: #{@user.power_animal.titleize}"

- if @user.reviews.any?
  %h3= "#{@user.first_name}'s reviews:"

  = render partial: 'reviews/on_user_page',
           collection: @user.reviews,
           as: :review,
           spacer_template: 'shared/hr'

- else
  %p= "#{@user.first_name} does not have any reviews yet"

